<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="df_account_move_line_inherit" model="ir.ui.view">
        <field name="name">df.account.move.line.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='analytic_distribution']" position="after">
                <field name="df_analytic_account" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="df_account_move_search_inherit" model="ir.ui.view">
        <field name="name">df.account.move.search.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='unposted']" position="after">
                <filter name="vendor_bills_only" string="Vendor Bills"
                        domain="[('move_type', '=', 'in_invoice')]"/>
            </xpath>
        </field>
    </record>
</odoo>
