<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="df_account_move_line_inherit" model="ir.ui.view">
        <field name="name">df.account.move.line.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/list//field[@name='analytic_distribution']" position="after">
                <field name="df_analytic_account" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_bill_filter_draft_override" model="ir.ui.view">
        <field name="name">account.bill.filter.draft.override</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_bill_filter"/>
        <field name="priority">200</field>
        <field name="arch" type="xml">
            <filter name="draft" position="attributes">
                <attribute name="domain">[('state', '=', 'draft')]</attribute>
            </filter>
        </field>
    </record>
</odoo>
